<%= form_with(model: submission, class: "contents") do |form| %>

  <% if submission.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(submission.errors.count, "error") %> prohibited this submission from being saved:</h2>

      <ul>
        <% submission.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    <%  @current_appointment=get_appointment(current_user.id) %>
    <%= form.hidden_field :user_id, value: current_user.id %>
    <%= form.hidden_field :appointment_id, value: @current_appointment.id %>

  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :purpose %>
    <%= form.text_area :purpose, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full", rows: 15, cols: 15 %>
  </div>

  <div class="my-5">
    <%= form.label :background %>
    <%= form.text_area :background, rows: 4, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full", rows: 15, cols: 50 %>
  </div>

  <div class="my-5">
    <%= form.label :discussion %>
    <%= form.text_area :discussion, rows: 4, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full", rows: 15, cols: 15 %>
  </div>

  <div class="my-5">
    <%= form.label :communication %>
    <%= form.text_area :communication, rows: 4, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full", rows: 15, cols: 15 %>
  </div>

  <div class="my-5">
    <%= form.label :legal %>
    <%= form.text_area :legal, rows: 4, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full", rows: 15, cols: 15 %>
  </div>

  <div class="my-5">
    <%= form.label :human_resource %>
    <%= form.text_area :human_resource, rows: 4, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full", rows: 15, cols: 15 %>
  </div>

  <div class="my-5">
    <%= form.label :financial %>
    <%= form.text_area :financial, rows: 4, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full", rows: 15, cols: 15 %>
  </div>

  <div class="my-5">
    <%= form.label :recommendation %>
    <%= form.text_area :recommendation, rows: 4, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full", rows: 15, cols: 15 %>
  </div>

  <div class="my-5">
    <%= form.label :docs %>
    <%= form.file_field :docs, multiple: true, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
