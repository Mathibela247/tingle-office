<%= turbo_stream_from "submissions" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
<div>
  <progress class="progress progress-primary" value="" max="100">
</div>
  <div class="flex justify-between items-center">
    <%= link_to 'Add Document', new_document_path, data: { turbo_frame: "modal" }, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Submissions</h1>
    <%= link_to 'New submission', new_submission_path, 
                                              data: { turbo_frame: dom_id(Submission.new) }, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

<%= turbo_frame_tag Submission.new %>

<%= turbo_frame_tag "submissions" do %>
  <div id="submissions" class="min-w-full">
    <%= render @submissions %>
  </div>
<% end %>
</div>
