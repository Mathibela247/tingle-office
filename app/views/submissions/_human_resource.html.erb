<div class="form-control w-full max-w-xs">
  <p class="my-5">
    <strong class="block font-medium mb-1">Human resource:</strong>
    <%= submission.human_resource %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Financial:</strong>
    <%= submission.financial %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Recommendation:</strong>
    <%= submission.recommendation %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this submission", submission, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this submission', edit_submission_path(submission), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>