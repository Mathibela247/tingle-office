

<% if user_signed_in? %>
 <%= render partial: "users/profile" %>
<% else %>
  <%= turbo_frame_tag "new-user" do %>
    <%= link_to "Sign up", new_user_registration_path, class: "inline-block cursor-pointer rounded-md bg-gray-800 px-4 py-3 text-center text-sm font-semibold uppercase text-white transition duration-200 ease-in-out hover:bg-gray-900" %>
  <% end %>
  <%- if controller_name != 'sessions' %>
      <%= link_to "Log in", new_session_path(:user) %><br />
    <% end %>
<% end %>

