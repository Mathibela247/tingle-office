<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  
  <div id="new_organization_unit">
    <%= render partial: "organization_units/form", locals: { organization_unit: OrganizationUnit.new } %>
  </div>

  <div id="organization_units" class="min-w-full">
  <% @organization_units.each do |organization_unit| %>
    <%= render organization_unit %>
    <p>
      <%= link_to "Show this organization_unit", organization_unit %>
    </p>
  <% end %>  
  </div>
</div>
