  <%= form_with(model: organization_unit, class: "contents") do |form| %>

    <% if organization_unit.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
        <h2><%= pluralize(organization_unit.errors.count, "error") %> prohibited this organization_unit from being saved:</h2>

        <ul>
          <% organization_unit.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="my-5">
      <%= form.label :name %>
      <%= form.text_field :name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.label :parent_id %>
      <%= form.select :parent_id, OrganizationUnit.all.collect{ |p| [ p.name, p.id ] }, include_blank: true, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.label :organization_year %>
      <%= form.date_select :organization_year %>
    </div>

    <div class="my-5">
      <%= form.label :isactive %><br />
      <%= form.radio_button :isactive, 'Yes' %>Yes<br />
      <%= form.radio_button :isactive, 'No' %>No<br />
    </div>

    <div class="my-5">
      <%= form.label :organization_type_id %>
      <%= form.select :organization_type_id, OrganizationType.all.collect{ |p| [ p.name, p.id ] }, include_blank: true, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.label :description %>
      <%= form.text_field :description, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="inline">
      <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
    </div>
 
  <% end %>
